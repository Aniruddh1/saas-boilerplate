# ==============================================
# App Boilerplate - Environment Configuration
# ==============================================
# Copy this file to .env and fill in your values

# ---------------------------------------------
# Application
# ---------------------------------------------
APP_NAME=My App
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# ---------------------------------------------
# Database (PostgreSQL)
# ---------------------------------------------
DB_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/app

# For local development without Docker:
# DB_URL=postgresql+asyncpg://postgres:postgres@localhost:5433/app

# ---------------------------------------------
# Redis
# ---------------------------------------------
REDIS_URL=redis://redis:6379/0

# For local development without Docker:
# REDIS_URL=redis://localhost:6380/0

# ---------------------------------------------
# Authentication
# ---------------------------------------------
# IMPORTANT: Generate a secure key for production!
# Run: openssl rand -hex 32
AUTH_SECRET_KEY=change-me-in-production-use-openssl-rand-hex-32
AUTH_ALGORITHM=HS256
AUTH_ACCESS_TOKEN_EXPIRE_MINUTES=30
AUTH_REFRESH_TOKEN_EXPIRE_DAYS=7

# ---------------------------------------------
# CORS
# ---------------------------------------------
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ---------------------------------------------
# Email (SMTP)
# ---------------------------------------------
# Development uses MailHog (no auth needed)
EMAIL_SMTP_HOST=mailhog
EMAIL_SMTP_PORT=1025
EMAIL_SMTP_USER=
EMAIL_SMTP_PASSWORD=
EMAIL_FROM_ADDRESS=noreply@app.local
EMAIL_FROM_NAME=My App

# Production example (SendGrid):
# EMAIL_SMTP_HOST=smtp.sendgrid.net
# EMAIL_SMTP_PORT=587
# EMAIL_SMTP_USER=apikey
# EMAIL_SMTP_PASSWORD=your-sendgrid-api-key
# EMAIL_FROM_ADDRESS=noreply@yourdomain.com

# ---------------------------------------------
# Search (Meilisearch)
# ---------------------------------------------
SEARCH_MEILISEARCH_URL=http://meilisearch:7700
SEARCH_MEILISEARCH_API_KEY=

# ---------------------------------------------
# Queue (Celery)
# ---------------------------------------------
QUEUE_BROKER_URL=redis://redis:6379/1
QUEUE_RESULT_BACKEND=redis://redis:6379/2

# ---------------------------------------------
# Storage (S3-compatible)
# ---------------------------------------------
# STORAGE_S3_BUCKET=your-bucket
# STORAGE_S3_REGION=us-east-1
# STORAGE_S3_ACCESS_KEY=your-access-key
# STORAGE_S3_SECRET_KEY=your-secret-key
# STORAGE_S3_ENDPOINT=  # For S3-compatible services like MinIO

# ---------------------------------------------
# Monitoring (Optional)
# ---------------------------------------------
# SENTRY_DSN=https://xxx@sentry.io/xxx
# DATADOG_API_KEY=your-datadog-key

# ---------------------------------------------
# Feature Flags
# ---------------------------------------------
FEATURE_REGISTRATION_ENABLED=true
FEATURE_SOCIAL_LOGIN_ENABLED=false
FEATURE_BILLING_ENABLED=false
