# Application
APP_NAME=SaaS API
APP_VERSION=0.1.0
DEBUG=true
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=1
RELOAD=true

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Database
DB_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/saas
DB_POOL_SIZE=5
DB_ECHO=false

# Redis
REDIS_URL=redis://localhost:6379/0

# Auth
AUTH_SECRET_KEY=change-me-in-production-use-openssl-rand-hex-32
AUTH_ALGORITHM=HS256
AUTH_ACCESS_TOKEN_EXPIRE_MINUTES=30
AUTH_REFRESH_TOKEN_EXPIRE_DAYS=7

# Storage
STORAGE_BACKEND=local
STORAGE_LOCAL_PATH=./uploads
# STORAGE_S3_BUCKET=
# STORAGE_S3_REGION=us-east-1

# Search
SEARCH_BACKEND=meilisearch
SEARCH_MEILISEARCH_URL=http://localhost:7700
SEARCH_MEILISEARCH_API_KEY=

# Email
EMAIL_BACKEND=smtp
EMAIL_FROM_ADDRESS=noreply@example.com
EMAIL_SMTP_HOST=localhost
EMAIL_SMTP_PORT=1025

# Queue
QUEUE_BACKEND=celery
QUEUE_BROKER_URL=redis://localhost:6379/1
QUEUE_RESULT_BACKEND=redis://localhost:6379/2

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
